<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.fragment.main.ProfileFragment"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:id="@+id/mpr_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_15sdp"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Username : "
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15ssp"
                    />

                <TextView
                    android:id="@+id/mpr_txt_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Username : "
                    android:textColor="@color/granite_grey"
                    android:textSize="@dimen/_13ssp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Email : "
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15ssp"
                    />

                <TextView
                    android:id="@+id/mpr_txt_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Email : "
                    android:textColor="@color/granite_grey"
                    android:textSize="@dimen/_13ssp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Full Name : "
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15ssp"
                    />

                <TextView
                    android:id="@+id/mpr_txt_nama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Full Name : "
                    android:textColor="@color/granite_grey"
                    android:textSize="@dimen/_13ssp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Level : "
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15ssp"
                    />

                <TextView
                    android:id="@+id/mpr_txt_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Level : "
                    android:textColor="@color/granite_grey"
                    android:textSize="@dimen/_13ssp"
                    />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/mpr_btn_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                android:backgroundTint="@color/scarlet"
                android:text="Logout"
                android:textAllCaps="false"
                android:fontFamily="@font/poppins_semibold"
                app:layout_constraintTop_toBottomOf="@id/mpr_linear"
                app:layout_constraintEnd_toEndOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</FrameLayout>